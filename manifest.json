{
  "manifest_version": 3,
  "name": "Gemini Text and HTML Processor",
  "version": "1.2",
  "description": "Select text or elements, send to Google Gemini for processing, and manage prompts",
  "permissions": ["contextMenus", "activeTab", "storage", "scripting", "tabs"],
  "host_permissions": ["*://*/*"],
  "content_scripts": [
    {
      "all_frames": true,
      "world": "MAIN",
      "run_at": "document_idle",
      "matches": ["<all_urls>"],
      "js": ["content_scripts/db_interaction.js", "content_scripts/contentScript.js"],
      "css": ["content_styles/ultimext.css"]
    }
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}